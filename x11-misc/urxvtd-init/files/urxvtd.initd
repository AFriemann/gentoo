description="urxvt daemon"

user="${SVCNAME/*./}"
group="`id -g -n ${user}`"
pidfile="/var/run/${SVCNAME}"

command="/usr/bin/urxvtd"
command_args=""
command_background="true"
start_stop_daemon_args="-p ${pidfile} -m -b -u ${user} -g ${group}"

depend() {
	need localmount
	after localmount
}

